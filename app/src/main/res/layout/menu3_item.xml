<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/movieposter_icon"/>

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:paddingRight="8dp"
            android:text="영화제목"
            android:textSize="20dp"
            android:textColor="@color/title"
            android:layout_toRightOf="@+id/imageView_img"/>

        <TextView
            android:id="@+id/textView_release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="개봉일"
            android:layout_below="@+id/textView_title"
            android:layout_toRightOf="@id/imageView_img"/>

        <TextView
            android:id="@+id/textView_director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="감독"
            android:layout_toRightOf="@id/imageView_img"
            android:layout_below="@id/textView_release"/>
    </RelativeLayout>




</LinearLayout>